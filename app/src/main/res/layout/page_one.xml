<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbkg"
    tools:context=".MainActivity"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintVertical_bias="1">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:background="@drawable/viewpager_bkg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.474">


        </View>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="296dp"
            android:layout_height="320dp"
            app:srcCompat="@drawable/dorama"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="-28dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:text="Meteor Garden"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="@+id/view"
            tools:layout_editor_absoluteX="120dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="319dp"
            android:layout_height="171dp"
            android:layout_marginTop="28dp"
            android:text="Jardim de Meteoros segue a história de uma jovem da classe trabalhadora que entra para uma universidade de elite frequentada pelos filhos das pessoas mais ricas da cidade. A série, assim, retrata a luta da protagonista para encontrar seu lugar na universidade enquanto tenta provar seu valor para todos."
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="31dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_star"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="531dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_star"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="531dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:srcCompat="@drawable/baseline_star"
            tools:layout_editor_absoluteY="531dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_star"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="531dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nota do autor:"
            android:textColor="@color/lavender"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="508dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>